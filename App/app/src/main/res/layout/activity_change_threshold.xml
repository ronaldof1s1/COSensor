<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_change_threshold"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ronaldofs.cosensor.ChangeThreshold">

    <Button
        android:text="Manual"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:id="@+id/manualButton"
        android:onClick="manual"
        android:background="@color/m_colorPrimaryDark"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:layout_below="@+id/assistedButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Assisted"
        android:layout_height="wrap_content"
        android:layout_marginTop="108dp"
        android:id="@+id/assistedButton"
        android:elevation="0dp"
        android:background="@color/m_colorPrimaryDark"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:layout_width="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/manualButton"
        android:layout_alignStart="@+id/manualButton" />
</RelativeLayout>
